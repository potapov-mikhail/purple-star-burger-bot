generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  tgId      Int       @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  address   Address[]
}

enum ProductCategory {
  Burger
  Drink
}

model Product {
  id          Int             @id @default(autoincrement())
  name        String
  description String
  price       Int
  category    ProductCategory @default(Burger)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model Address {
  id        Int      @id @default(autoincrement())
  city      String
  street    String
  house     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}
